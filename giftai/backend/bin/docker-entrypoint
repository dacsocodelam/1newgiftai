#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Náº¿u Ä‘ang cháº¡y rails server thÃ¬ chuáº©n bá»‹ database
if [ "${@: -2:1}" == "./bin/rails" ] && [ "${@: -1:1}" == "server" ]; then
  echo "ğŸš€ Äang kiá»ƒm tra vÃ  cáº­p nháº­t Database..."
  ./bin/rails db:migrate
  # Táº¡m thá»i Ã©p cháº¡y seed Ä‘á»ƒ cháº¯c cháº¯n cÃ³ dá»¯ liá»‡u máº«u cho demo
  ./bin/rails db:seed 
fi

exec "${@}"